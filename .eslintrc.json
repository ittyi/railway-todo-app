{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": { "browser": true, "jest": true, "node": true },
  "globals": {},
  "rules": {
    "indent": ["error", 2], // rule名:[]でオプション設定
    "react/jsx-uses-react": "error"
  }
}
