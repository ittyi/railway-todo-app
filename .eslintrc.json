{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": { "browser": true },
  "globals": {},
  "rules": {
    "indent": ["error", 2], // rule名:[]でオプション設定
    "react/jsx-uses-react": "error"
  }
}
